{
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "tab",
        "indentWidth": 2,
        "lineWidth": 80,
        "lineEnding": "lf",
        "ignore": []
    },
    "linter": {
        "enabled": true,
        "rules": {
            "style": {
                "useBlockStatements": "error",
                "useShorthandArrayType": "error",
                "noShoutyConstants": "warn"
            }
        }
    },
    "organizeImports": {
        "include": [
            "src/*.js",
            "src/**/*.js",
            "src/*.ts",
            "src/**/*.tsx"
        ]
    }
}